  body(style='background:#FFFAF4')
    style(type='text/css').
      ul{padding: 0;}
      ol, ul {list-style: none;}
      .posts-container .post-container{padding:10px;border:2px solid #D8D8D8;margin-bottom:-2px;padding-bottom:10px;}.posts-container .post-container .right-content{float:left;width:100%;}.posts-container .post-container .right-content img{position:absolute;}.posts-container .post-container .right-content .info-post ul li{margin-top:10px;float:left;}
      .clear {clear: both;display: block;overflow: hidden;visibility: hidden;width: 0;height: 0;}
    div
      div(style='background:orange;position:fixed;width: 100%;z-index:2; height: 50px')
        div(style='width: 20px;margin-left:20px;padding-top:15px;float:left')
          a(href='/event', style='color:white')
            i.fa.fa-arrow-left(style='font-size:25px ')
        div(style='width: 20px;margin-right:20px;padding-top:15px;float:right')
          a(href='/apply', style='color:white')
            i.fa.fa-plus(style='font-size:25px')
      div(style='background:#D8D8D8;width: 100%;height: 50px')
      div(style='position: relative; margin-left: auto;margin-right: auto;max-width: 800px;')
        .posts-container(style='padding:0')
          h3 Unpublished Events
        .posts-container(style='padding:0')
         each event in data.event
             h4(style='color:#D8D8D8',class=event._.eventTime.format('YMMDDhhmmss')) #{event._.eventTime.format('Do MMM, YYYY')}
             .post-container(style='background: white')
               .right-content
                 div
                  p(style='word-wrap:break-word;font-size:20px;color:dimgray; font-weight:bold;line-height:20px;color:  #D8D8D8') #{event.eventTitle}
                 .info-post
                   ul
                     li
                       i.fa.fa-clock-o(style=' font-size:16px;font-weight:bold;color:#a1a1a1;color:#D8D8D8') &nbsp #{event._.eventTime.format('hh:mm a')} &nbsp
                     li
                       i.fa.fa-map-marker(style='font-size:16px;font-weight:bold;color:#a1a1a1;color:#D8D8D8') &nbsp #{event.cities.name} &nbsp
               .clear
             div(style='height:10px')