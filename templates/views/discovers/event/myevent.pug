html(lang='en')
  head
    link(rel='shortcut icon', href='/img/favicon.ico')
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name='description', itemprop='description', content='Shanghai Events')
    meta(itemprop='name', content='Shanghai Events')
    meta(itemprop='image', content='/img/logolarge.jpeg')
    title My Events
    link(href='http://libs.baidu.com/bootstrap/3.0.3/css/bootstrap.css', rel='stylesheet')
    link(href='https://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.min.css', rel='stylesheet')
    script(src="/js/jquery/jquery-1.11.3.min.js")
    style.
      a.list-group-item.active, a.list-group-item.active:hover, a.list-group-item.active:focus {
      background-color: orange!important;
      border-color: orange!important;
      }
    script.
      var _hmt = _hmt || [];
      (function() {
      var hm = document.createElement("script");
      hm.src = "https://hm.baidu.com/hm.js?0d26b429e7de67ec752769c8390751ae";
