doctype html
html(lang='en')
  head
    include ../../../layouts/header.pug
    meta(name='description', itemprop='description', content=data.discovery.title)
    meta(itemprop='name', content=data.discovery.title)
    title #{data.discovery.title}
  body(style='background:#FFFAF4;padding:0px; margin:0px')
    div
      div(style='background:white;position:fixed;width: 100%;z-index:2; height: 50px')
        div(style='width: 20px;padding-left:15px;padding-top:15px')
          a(href='../'+ data.discovery.categories.key, style='color:orange ')
            i.fa.fa-arrow-left(style='font-size:25px ')
      div(style='height:52px;background:#F8F8F8')
      div
        h2(style='text-align: center') #{data.discovery.title}
      div(style='position: relative; margin-left: auto;margin-right: auto;max-width: 720px;')
        div(style='border:10px solid transparent;width:100%; height:100%; overflow:hidden;')!= data.discovery.content
        // JiaThis Button BEGIN
      div(style='height: 20px')
        .jiathis_style_24x24(style='float:right')
          a.jiathis_button_weixin
          a.jiathis_button_linkedin
          a.jiathis_button_fb
          a.jiathis.jiathis_txt.jtico.jtico_jiathis(href='http://www.jiathis.com/share', target='_blank')
          a.jiathis_counter_style
        script(type='text/javascript', src='http://v3.jiathis.com/code/jia.js', charset='utf-8')
        div(style='height: 30px')
        // JiaThis Button END
