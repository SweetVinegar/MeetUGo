  body(style='background:#FFFAF4')
    style(type='text/css').
      ul{padding: 0;}
      ol, ul {list-style: none;}
      .posts-container .post-container{padding:10px;border:2px solid orange;margin-bottom:-2px;padding-bottom:10px;}.posts-container .post-container .right-content{float:left;width:100%;}.posts-container .post-container .right-content img{position:absolute;}.posts-container .post-container .right-content .info-post ul li{margin-top:10px;float:left;}
      .clear {clear: both;display: block;overflow: hidden;visibility: hidden;width: 0;height: 0;}
    div
      div(style='background:orange;position:fixed;width: 100%;z-index:2; height: 50px')
        div(style='width: 20px;margin-left:20px;padding-top:15px;float:left')
          a(href='/', style='color:white')
            i.fa.fa-arrow-left(style='font-size:25px ')
      div(style='background:orange;width: 100%;height: 50px')
      div(style='position: relative; margin-left: auto;margin-right: auto;max-width: 800px;')
        if posts.categories.length
          .col-md-3.col-md-push-9(style='word-wrap:break-word;')
            h2 Categories
            .list-group
              a(href='/blog', class=!data.category ? 'active' : false).list-group-item All Categories
              each cat in post.categories
               a(href='/blog/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name
        .posts-container.col-md-9.col-md-pull-3(style='padding:0')
         each post in data.post
             h4(style='color: black',class=post._.publishedDate.format('MMMM Do, YYYY')) #{post._.publishedDate.format('MMMM Do, YYYY')}
             .post-container(style='background: white')
               .right-content
                 div
                   a(href='/blog/post/' + post.slug)
                     p(style='word-wrap:break-word;font-size:20px;color:dimgray; font-weight:bold;line-height:20px;') #{event.eventTitle}
               .clear
             div(style='height:10px')