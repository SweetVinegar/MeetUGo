  body
    style(type='text/css').
      ul{padding: 0;}
      ol, ul {list-style: none;}
      .posts-container .post-container{padding:10px;border:2px solid lightgrey;margin-bottom:-2px;padding-bottom:10px;}.posts-container .post-container .right-content{float:left;width:100%;}.posts-container .post-container .right-content img{position:absolute;}.posts-container .post-container .right-content .info-post ul li{margin-top:10px;float:left;}
      .clear {clear: both;display: block;overflow: hidden;visibility: hidden;width: 0;height: 0;}
    div
      div(style='background:lightgrey;position:fixed;width: 100%;z-index:2; height: 50px')
        div(style='width: 20px;margin-left:20px;padding-top:15px;float:left')
          a(href='/setting', style='color:white')
            i.fa.fa-arrow-left(style='font-size:25px ')
        div(style='width: 20px;margin-right:20px;padding-top:15px;float:right')
          a(href='/create/event', style='color:white')
            i.fa.fa-plus(style='font-size:25px')
      div(style='background:orange;width: 100%;height: 50px')
      div(style='position: relative; margin-left: auto;margin-right: auto;max-width: 600px;')
        .posts-container(style='padding:0')
          h3 Hi! #{user.name.first} #{user.name.last}, These are events you share
        .posts-container(style='padding:0')
          each event in data.event
            p(style='color:black;margin-top:30px',class=event._.eventTime.format('YMMDD')) #{event._.eventTime.format('Do MMM, YYYY')}
            .post-container(style='background: white')
              .right-content
                div
                  a(href='/event/manage/' + event._id)
                    p(style='word-wrap:break-word;line-height:20px;')
                      span(style='color:black') #{event.eventTitle}
                .info-post
                  ul
                    li
                      i.fa.fa-clock-o &nbsp #{event._.eventTime.format('hh:mm a')} &nbsp
                    a(href='/event/manage/' + event._id)
                      button(style='background:lightgray;color:white;float:right').btn Manage
              .clear
        each event in data.event
          script.
            $(".#{event._.eventTime.format('YMMDD')}").hide();
            $(".#{event._.eventTime.format('YMMDD')}").first().show();